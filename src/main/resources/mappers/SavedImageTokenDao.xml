<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ncoxs.myblog.dao.mysql.SavedImageTokenDao">
    <resultMap id="BaseResultMap" type="com.ncoxs.myblog.model.pojo.SavedImageToken">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="token" jdbcType="VARCHAR" property="token"/>
        <result column="target_type" jdbcType="INTEGER" property="targetType"/>
        <result column="target_id" jdbcType="INTEGER" property="targetId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, token, target_type, target_id, create_time
    </sql>

    <select id="selectByToken" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from saved_image_token
        where token=#{token}
    </select>

    <select id="selectTokenByTarget" resultType="java.lang.String">
        select token
        from saved_image_token
        where target_id=#{targetId} and target_type=#{targetType}
    </select>

    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.ncoxs.myblog.model.pojo.SavedImageToken"
            useGeneratedKeys="true">
        insert into saved_image_token (token, target_type, target_id)
        # 防止重复插入
        select #{token,jdbcType=VARCHAR}, #{targetType,jdbcType=INTEGER}, #{targetId,jdbcType=INTEGER}
        from dual where not exists(select token from saved_image_token where token=#{token})
    </insert>

    <delete id="deleteByToken" parameterType="java.lang.String">
        delete
        from saved_image_token
        where token=#{token}
    </delete>
</mapper>
